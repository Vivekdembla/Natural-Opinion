<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReferenceActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upper_view">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/deep_green"
            android:id="@+id/green">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/white"
                android:id="@+id/back_button"
                app:layout_constraintTop_toTopOf="@id/heading"
                app:layout_constraintBottom_toBottomOf="@id/heading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/back_button"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:text="Reference"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/heading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/heading"
                app:layout_constraintTop_toBottomOf="@id/heading"
                android:text="Atherosclerosis "
                android:textColor="@color/white"
                android:id="@+id/sub_heading"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sub_heading"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/second"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/skin"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sub Section"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/deep_green"
                            android:id="@+id/second_text"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/green"
            android:id="@+id/card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/Lorem4"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/black"
                    android:paddingVertical="15dp"
                    android:id="@+id/para_subheading"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/para_subheading"
                    app:layout_constraintLeft_toLeftOf="@id/para_subheading"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/Lorem4"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/black"
                    android:paddingVertical="15dp"
                    android:id="@+id/para_subheading2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/para_subheading2"
                    app:layout_constraintLeft_toLeftOf="@id/para_subheading2"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/Lorem4"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/black"
                    android:paddingVertical="15dp"
                    android:id="@+id/para_subheading3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>