<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConditionDetailActivity"
    android:background="@color/white">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/deep_green"
        android:id="@+id/green">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/white"
            android:id="@+id/back_button_6"
            app:layout_constraintTop_toTopOf="@id/condition_name"
            app:layout_constraintBottom_toBottomOf="@id/condition_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/back_button_6"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:text="Atherosclerosis"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/condition_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/condition_name"
            app:layout_constraintTop_toBottomOf="@id/condition_name"
            android:text="Lorem ipsum dolor sit amet, consectetur\nLorem ipsum dolor sit "
            android:textColor="@color/white"
            android:id="@+id/condition_detail"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/condition_detail"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/first"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/skin"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="10dp"
                    app:strokeColor="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diet and Nutrition"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_green"
                        android:id="@+id/first_text"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/second"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    app:strokeWidth="5px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitamins and Minerals"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/skin"
                        android:id="@+id/second_text"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/third"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    app:strokeWidth="5px"
                    app:strokeColor="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supplements"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/skin"
                        android:id="@+id/third_text"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forth"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    app:strokeWidth="5px"
                    app:strokeColor="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Botanicals"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/skin"
                        android:id="@+id/forth_text"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fifth"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    app:strokeWidth="5px"
                    app:strokeColor="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Homeopathic Remedies"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/skin"
                        android:id="@+id/fifth_text"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sixth"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    app:strokeWidth="5px"
                    app:strokeColor="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Therapies"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/skin"
                        android:id="@+id/sixth_text"/>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seventh"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_marginRight="30dp"
                    app:strokeWidth="5px"
                    app:strokeColor="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended Labs"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/skin"
                        android:id="@+id/seventh_text"/>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/ic_reference"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toTopOf="@id/card"
        android:elevation="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:id="@+id/reference"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/green"
        android:id="@+id/card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="20dp"
                android:text="Diet and Nutrition"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/diet"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/diet"
                app:layout_constraintLeft_toLeftOf="@id/diet"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/atherosclerosis_diet"
                android:lineSpacingExtra="8dp"
                android:textColor="@color/black"
                android:paddingVertical="15dp"
                android:id="@+id/content_data"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>