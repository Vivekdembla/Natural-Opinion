<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/light_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="20dp"
                android:text="Exit"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/heading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/heading"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/heading"
                android:text="Do you want to exit from app ?"
                android:textColor="@color/black"
                android:id="@+id/sub_heading"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/positive"
                app:layout_constraintTop_toBottomOf="@id/sub_heading"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Yes"
                android:textColor="@color/deep_green"
                android:layout_marginRight="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/negative"
                app:layout_constraintTop_toTopOf="@id/positive"
                app:layout_constraintRight_toRightOf="parent"
                android:text="No"
                android:textColor="@color/deep_green"
                android:layout_marginRight="55dp"
                app:layout_constraintBottom_toBottomOf="@id/positive"
                app:layout_constraintRight_toLeftOf="@id/positive"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>