<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplementDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/deep_green"
            android:id="@+id/green">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/white"
                android:id="@+id/back_button_6"
                app:layout_constraintTop_toTopOf="@id/supplement"
                app:layout_constraintBottom_toBottomOf="@id/supplement"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/back_button_6"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:text="Fiber"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/supplement"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/supplement"
                app:layout_constraintTop_toBottomOf="@id/supplement"
                android:text="Lorem ipsum dolor sit amet, consectetur\nLorem ipsum dolor sit "
                android:textColor="@color/white"
                android:id="@+id/supplement_desc"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="left"
                android:layout_marginRight="30dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/supplement_desc"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/description"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/skin"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="10dp"
                        app:strokeColor="@color/white"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/deep_green"
                            android:id="@+id/description_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_food"
                        app:cardCornerRadius="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plant/Food"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/plant_food_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/function"
                        app:cardCornerRadius="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physiological Functions"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/function_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/indication"
                        android:visibility="gone"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clinical Indications"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/indication_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dosage"
                        app:cardCornerRadius="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dosage"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/dosage_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sign_symptom"
                        app:cardCornerRadius="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Signs and Symptoms of Deficiency"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/sign_symptom_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/deficiency_cause"
                        android:visibility="gone"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cause Of Deficiency"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/deficiency_cause_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toxicity"
                        app:cardCornerRadius="20dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toxicity"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/toxicity_text"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contraindiction"
                        android:visibility="gone"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contraindication"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/contraindition_text"/>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/drug_nutrition"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginRight="30dp"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drug/Nutrition"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/drug_nutrition_text"/>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adverse_reaction"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/transparent"
                        android:orientation="horizontal"
                        android:layout_marginRight="30dp"
                        android:visibility="gone"
                        app:strokeWidth="5px"
                        app:strokeColor="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adverse reaction"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/skin"
                            android:id="@+id/adverse_reaction_text"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/ic_reference"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintBottom_toTopOf="@id/card"
            android:elevation="3dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:id="@+id/reference"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/green"
            android:id="@+id/card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="20dp"
                    android:text="Diet and Nutrition"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:id="@+id/sub_heading"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/sub_heading"
                    app:layout_constraintLeft_toLeftOf="@id/sub_heading"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="@string/atherosclerosis_diet"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/black"
                    android:paddingVertical="15dp"
                    android:id="@+id/content_data"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>