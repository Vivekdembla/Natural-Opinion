<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalConditionActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/medical_heading"
        app:layout_constraintBottom_toBottomOf="@id/medical_heading"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_back"
        android:id="@+id/back_button_5"/>

    <TextView
        android:id="@+id/medical_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Medical Conditions"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/medical_heading"
        android:elevation="100dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/medical_card"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="text"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/white"
            android:layout_marginRight="70dp"
            android:id="@+id/search_edittext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="Search"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/deep_green"
            android:textStyle="bold"
            android:id="@+id/search_button"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/medical_card"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/medical_items"
        android:id="@+id/medical_recycler"/>

</androidx.constraintlayout.widget.ConstraintLayout>